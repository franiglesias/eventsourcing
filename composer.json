{
    "name": "milhojas/eventsourcing",
    "description": "A simple library to start with eventsourcing",
    "type": "library",
    "require": {
        "php": "^5.5 || ^7.0",

        "milhojas/messaging": "^1.1",
        "ramsey/uuid": "^3.5",
        "doctrine/dbal": "^2.5"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.2",
        "phpunit/phpunit": "^5.7"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-4": {
            "Milhojas\\EventSourcing\\": ["src/Milhojas/EventSourcing"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\EventSourcing\\": ["test/Milhojas/EventSourcing"]
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "franiglesias",
            "email": "franiglesias@mac.com"
        }
    ]
}
